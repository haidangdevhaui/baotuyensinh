<div class="page-container">
	<div class="fix-width">
		<div class="page-have-sidebar">
			<div class="page-wrap">
				<div class="breadcumb">
					<a href="/" class="home"><i class="fa fa-home"></i> Trang chủ</a>
					<span class="sep"></span>
					<a href="#">Hình ảnh</a>
					<div class="clear"></div>
				</div>
				<% for(var i in data.cmedias){ if(data.cmedias[i].type == 'image'){ %>
				<div class="media-area">
					<h3 class="title pic-icon"><%= data.cmedias[i].name %> <a href="/<%= data.cmedias[i].url %>">Xem thêm &raquo;</a></h3>
					<div class="list-media">
						<% for(var p in data.medias){ if(data.medias[p].type._id == data.cmedias[i]._id){ %>
						<div class="three-col">
							<div class="item picture">
								<div class="thumbnail">
									<a href="/<%= data.medias[p].url %>">
										<img src="<%= data.medias[p].img %>">
										<span class="mark"></span>
									</a>
								</div>
								<div class="content">
									<a href="/<%= data.medias[p].url %>">
										<%= data.medias[p].name %>
									</a>
								</div>
							</div>
						</div>
						<% } } %>
						<div class="clear"></div>
					</div>
					<div class="line"></div>
				</div>
				<% } } %>
				<div class="adv-are">
					<div class="row-adv">
						<div class="two-col thumbnail">
							<a href="">
								<img src="images/adv/3.png">
							</a>
						</div>
						<div class="two-col thumbnail">
							<a href="">
								<img src="images/adv/4.png">
							</a>
						</div>
						<div class="clear"></div>
						<div class="full-adv thumbnail">
							<a href="">
								<img src="images/adv/5.png">
							</a>
						</div>
					</div>
				</div>
				<!-- end adv -->		
			</div>
			<div class="sidebar">
				<div class="sidebar-widget menu-widget">
	<div class="widgettitle">
		<h3>Danh mục hình ảnh</h3>
	</div>
	<div class="widgetcontent">
		<ul>
			<% for(var c in data.cmedias){ if(data.cmedias[c].type == 'image'){%>
            <li>
                <a href="<%= data.cmedias[c].url %>">
                    <%= data.cmedias[c].name %>
                </a>
            </li>
            <% } } %>
		</ul>
	</div>
</div>
<div class="sidebar-widget">
	<div class="widgettitle">
		<h3>Tin tức nổi bật</h3>
	</div>
	<div class="widgetcontent">
		<div class="list-blog-sidebar">
			<% var a = 0; for(var h in data.posts){ if(data.posts[h].hot == true){ a ++;%>
			<div class="item">
				<div class="thumbnail">
					<a href="/<%= data.posts[h].url %>">
						<img src="<%= data.posts[h].img %>">
					</a>
				</div>
				<div class="content">
					<a href="/<%= data.posts[h].url %>"><%= data.posts[h].name %></a>
				</div>
				<div class="clear"></div>
			</div>
			<% if(a == 5) break;} } %>
		</div>
	</div>
</div>
