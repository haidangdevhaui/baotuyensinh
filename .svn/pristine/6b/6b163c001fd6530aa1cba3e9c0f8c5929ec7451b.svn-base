<div class="page-container">
    <div class="fix-width">
        <div class="page-have-sidebar">
            <div class="page-wrap">
                <div class="breadcumb">
                    <a class="home" href="#">
                        <i class="fa fa-home">
                        </i>
                        Trang chủ
                    </a>
                    <span class="sep">
                    </span>
                    <a href="#">
                        Đăng ký
                    </a>
                    <div class="clear">
                    </div>
                </div>
                <div id="register-form" class="user-form-popup mfp-with-anim">
                    <div class="popup-header">
                        <h2>
                            Đăng ký tài khoản
                        </h2>
                    </div>
                    <div class="popup-content">
                        <form action="/register" method="post">
                            <div class="form-row">
                                <label>
                                    Tên đăng nhập *
                                </label>
                                <input type="text" required="" name="username"/>
                            </div>
                            <div class="form-row">
                                <label>
                                    Email *
                                </label>
                                <input type="email" required="" name="email"/>
                                <p class="note">
                                    Hãy dùng email thật của bạn để nhận liên kết kích hoạt
                                </p>
                            </div>
                            <div class="form-row">
                                <label>
                                    Họ
                                </label>
                                <input type="text" name="firstname"/>
                            </div>
                            <div class="form-row">
                                <label>
                                    Tên *
                                </label>
                                <input type="text" required="" name="lastname"/>
                            </div>
                            <div class="form-row">
                                <label>
                                    Mật khẩu *
                                </label>
                                <input type="password" required="" name="password"/>
                            </div>
                            <div class="form-row">
                                <label>
                                    Nhập lại mật khẩu *
                                </label>
                                <input type="password" required="" name="repassword"/>
                            </div>
                            <div class="form-row">
                                <div class="captcha">
                                    <label>
                                        Mã xác nhận
                                    </label>
                                    <input type="text"/>
                                </div>
                            </div>
                            <div class="form-row">
                                <label>
                                    <input type="checkbox"/>
                                    Tôi đồng ý với quy định của tòa soạn
                                </label>
                            </div>
                            <div class="form-row">
                                <input type="submit" value="Đăng ký"/>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="sidebar">
                <div class="sidebar-widget menu-widget">
                    <div class="widgettitle">
                        <h3>
                            Quản lí tài khoản
                        </h3>
                    </div>
                    <div class="widgetcontent">
                        <ul>
                            <li>
                                <a href="">
                                    Thay đổi thông tin cá nhân
                                </a>
                            </li>
                            <li>
                                <a href="">
                                    Thay đổi mật khẩu
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="clear">
            </div>
        </div>
    </div>
</div>
