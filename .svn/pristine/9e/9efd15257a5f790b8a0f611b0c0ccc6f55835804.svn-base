<div ng-controller="userCtrl">
	<div class="row">
        <div class="col-sm-12">
            <div class="btn-group pull-right m-t-15">
                <!-- <button aria-expanded="false" class="btn btn-custom dropdown-toggle waves-effect waves-light" data-toggle="dropdown" type="button">
                    Cài đặt
                    <span class="m-l-5">
                        <i class="fa fa-cog">
                        </i>
                    </span>
                </button> -->
                <button class="btn btn-success" type="button" ui-sref="users">
                    <span class="m-l-5">
                        <i class="fa fa-long-arrow-left">
                        </i>
                    </span>
                    Danh sách người dùng
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li>
                        <a href="#">
                            Action
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            Another action
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            Something else here
                        </a>
                    </li>
                    <li class="divider">
                    </li>
                    <li>
                        <a href="#">
                            Separated link
                        </a>
                    </li>
                </ul>
            </div>
            <h4 class="page-title">
               	Hồ sơ người dùng
            </h4>
        </div>
    </div>
	<div class="row">
        <div class="col-lg-6">
            <div class="card-box table-responsive">
            	<h4>Thông tin cá nhân</h4>
				<form class="form-horizontal" id="form" ng-submit="Users.update(data)" role="form">
					<div class="form-group">
                        <label class="col-md-2 control-label">
                            Họ
                        </label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" ng-model="data.firstname">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            Tên
                        </label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" ng-model="data.lastname">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            Ngày sinh
                        </label>
                        <div class="col-md-10">
                            <input type="text" class="form-control datepicker" ng-model="data.birth">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            Giới tính
                        </label>
                        <div class="col-md-10">
                            <div class="radio radio-custom">
                                <input type="radio" value="1" id="radio03" ng-model="data.gender">
                                <label for="radio03">
                                    Nam
                                </label>
                            </div>
                            <div class="radio radio-custom">
                                <input type="radio" value="0" id="radio04" ng-model="data.gender">
                                <label for="radio04">
                                    Nữ
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            Quên quán
                        </label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" ng-model="data.province">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            Số điện thoại
                        </label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" ng-model="data.phone">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            Giới thiệu thêm
                        </label>
                        <div class="col-md-10">
                            <textarea class="form-control" ng-model="data.desc">
                            </textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button class="btn btn-success" type="submit">
                                Cập nhật
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card-box table-responsive">
            	<h4>Thông tin tài khoản</h4>
            	<form class="form-horizontal" id="form" ng-submit="Users.update(account)" role="form">
					<div class="form-group">
                        <label class="col-md-2 control-label">
                            Tên đăng nhập
                        </label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" ng-model="account.username" disabled="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            Email
                        </label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" ng-model="account.email" disabled="">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button class="btn btn-success" type="submit" disabled="">
                                Cập nhật
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-box table-responsive">
            	<h4>Quyền hạn</h4>
            	<select ng-model="data.auth" class="form-control" ng-change="auth(data.auth)">
            		<option value="0">Thành viên</option>
            		<option value="1" ng-if="user.auth == 1">Quản trị viên</option>
            		<option value="2">Nhân viên</option>
            	</select>
            	<form ng-submit="managerAuth(dataManager)">
	            	<div class="form-group"  ng-repeat="type in types">
	                    <div class="checkbox checkbox-custom">
	                        <input type="checkbox" id="checkbox{{$index}}" value="{{type.type.url}}" ng-model="dataManager[$index]">
	                        <label for="checkbox{{$index}}">
	                            {{type.type.name}}
	                        </label>
	                    </div>
	                </div>
	                <div class="form-group">
	                    <div class="col-md-10">
	                        <button class="btn btn-success" type="submit">
	                            Cập nhật
	                        </button>
	                    </div>
	                </div>
                </form>
            </div>
        </div>
    </div>
</div>