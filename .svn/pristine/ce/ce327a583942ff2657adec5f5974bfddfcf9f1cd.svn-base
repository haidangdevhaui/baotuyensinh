<div class="page-container">
    <div class="fix-width">
        <div class="page-have-sidebar">
            <div class="page-wrap">
                <div class="breadcumb">
                    <a class="home" href="#">
                        <i class="fa fa-home">
                        </i>
                        Trang chủ
                    </a>
                    <span class="sep">
                    </span>
                    <a href="#">
                        <%= data.video.name %>
                    </a>
                    <div class="clear">
                    </div>
                </div>
                <div class="single-blog-content">
                    <h1 class="title">
                        <%= data.video.name %>
                    </h1>
                    <div class="blog-detail">
                        <span class="date">
                            <i class="fa fa-calendar">
                            </i>
                            Cập nhật: <%= data.video.crt %>
                        </span>
                        <span class="views">
                            <i class="fa fa-bar-chart">
                            </i>
                            Lượt xem: <%= data.video.views %>
                        </span>
                        <div class="fontsize">
                            <label>
                                Cỡ chữ
                            </label>
                            <a class="plus-size" href="">
                                <i class="fa fa-plus-square">
                                </i>
                            </a>
                            <a class="minus-size" href="">
                                <i class="fa fa-minus-square">
                                </i>
                            </a>
                        </div>
                    </div>
                    <div class="single-content">
                        <div id="player"></div>
                        <script>
                          var tag = document.createElement('script');

                          tag.src = "https://www.youtube.com/iframe_api";
                          var firstScriptTag = document.getElementsByTagName('script')[0];
                          firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
                          var player;
                          function onYouTubeIframeAPIReady() {
                            player = new YT.Player('player', {
                              height: '390',
                              width: '640',
                              videoId: '<%= data.video.video.id %>',
                              events: {
                                // 'onReady': onPlayerReady,
                                'onStateChange': onPlayerStateChange
                              }
                            });
                          }
                          function onPlayerReady(event) {
                            event.target.playVideo();
                          }
                          var done = false;
                          function onPlayerStateChange(event) {
                            if (event.data == YT.PlayerState.PLAYING && !done) {
                              setTimeout(stopVideo, 6000);
                              done = true;
                            }
                          }
                          function stopVideo() {
                            player.stopVideo();
                          }
                        </script>
                    </div>
                    <div class="blog-tags">
                    	
                        <a href="">
                            
                        </a>
                        
                    </div>
                    <div class="related-media">
                    <h3 class="title">Các Video khác cùng danh mục</h3>
                    <div class="list-media">
                        <% var a = 0; for(var v in data.videos){ if(data.videos[v].type._id == data.video.type._id && data.videos[v]._id != data.video._id){ a ++;%>
                        <div class="three-col">
                            <div class="item video">
                                <div class="thumbnail">
                                    <a href="<%= data.videos[v].url %>">
                                        <img src="<%= data.videos[v].img %>">
                                        <span class="mark"></span>
                                    </a>
                                </div>
                                <div class="content">
                                    <a href="<%= data.videos[v].url %>">
                                        <%= data.videos[v].name %>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <% if(a == 3){break; }%>
                        <% } }%>
                        <div class="clear"></div>
                    </div>
                </div>
                </div>
            </div>

            <div class="sidebar">
                <div class="sidebar-widget menu-widget">
                    <div class="widgettitle">
                        <h3>
                            Danh mục video
                        </h3>
                    </div>
                    <div class="widgetcontent">
                        <ul>
                        	<% for(var c in data.cmedias){ if(data.cmedias[c].type == 'video'){ %>
                            <li>
                                <a href="<%= data.cmedias[c].url %>">
                                    <%= data.cmedias[c].name %>
                                </a>
                            </li>
                            <% } } %>
                        </ul>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="widgettitle">
                        <h3>
                            Tin tức nổi bật
                        </h3>
                    </div>
                    <div class="widgetcontent">
                        <div class="list-blog-sidebar">
                            <% var a = 0; for(var i in data.posts){ if(data.posts[i].hot == true){ %>
                            <div class="item">
                                <div class="thumbnail">
                                    <a href="<%= data.posts[i].url %>">
                                        <img src="<%= data.posts[i].img %>">
                                        </img>
                                    </a>
                                </div>
                                <div class="content">
                                    <a href="<%= data.posts[i].url %>">
                                        <%= data.posts[i].name %>
                                    </a>
                                </div>
                                <div class="clear">
                                </div>
                            </div>
                            <% if(a == 3){break; } } }%>
                        </div>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="widgettitle">
                        <h3>
                            Thư viện hình ảnh
                        </h3>
                    </div>
                    <div class="widgetcontent">
                        <!-- Place somewhere in the <body> of your page -->
                        <div class="flexslider" id="slider">
                            <ul class="slides">
                                <li>
                                    <img src="images/blog/slide1.png"/>
                                </li>
                                <li>
                                    <img src="images/blog/slide1.png"/>
                                </li>
                                <li>
                                    <img src="images/blog/slide1.png"/>
                                </li>
                                <li>
                                    <img src="images/blog/slide1.png"/>
                                </li>
                                <!-- items mirrored twice, total of 12 -->
                            </ul>
                        </div>
                        <div class="flexslider controle-nav" id="carousel">
                            <ul class="slides">
                                <li>
                                    <div class="thumbnail">
                                        <img src="images/blog/slide1.png"/>
                                    </div>
                                </li>
                                <li>
                                    <div class="thumbnail">
                                        <img src="images/blog/slide1.png"/>
                                    </div>
                                </li>
                                <li>
                                    <div class="thumbnail">
                                        <img src="images/blog/slide1.png"/>
                                    </div>
                                </li>
                                <li>
                                    <div class="thumbnail">
                                        <img src="images/blog/slide1.png"/>
                                    </div>
                                </li>
                                <!-- items mirrored twice, total of 12 -->
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="widgettitle">
                        <h3>
                            Thư viện video
                        </h3>
                    </div>
                    <div class="widgetcontent">
                        <div class="videoslide">
                            <div class="video-iframe">
                                
                            </div>
                            <div class="video-list">
                                <ul>
                                    <% for(var i in data.medias){ if(data.medias[i].media == 'video'){  %>
                                    <li class="current">
                                        <a href="/<%= data.medias[i].url %>">
                                            <i class="fa fa-video-camera">
                                            </i>
                                            <%= data.medias[i].name %>
                                        </a>
                                    </li>
                                    <% } } %>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="widgettitle">
                        <h3>
                            Thăm dò ý kiến
                        </h3>
                    </div>
                    <div class="widgetcontent rate-form">
                        <p>
                            <strong>
                                Bạn thấy website trình bày có hợp lý và đẹp mắt không?
                            </strong>
                        </p>
                        <form method="post" action="" class="form-vote">
                            <label>
                                <input type="radio" value="4" name="rate">
                                    Rất tuyệt vời
                                
                            </label>
                            <label>
                                <input type="radio" value="3" name="rate">
                                    Chuyên nghiệp
                                
                            </label>
                            <label>
                                <input type="radio" value="2" name="rate">
                                    Bình thường
                                
                            </label>
                            <label>
                                <input type="radio" value="1" name="rate">
                                    Kém
                                
                            </label>
                            <input type="submit" value="Bình chọn" class="submit-btn submit-form">
                            <a id="xemkq" class="submit-btn result-form">
                                Xem kết quả
                            </a>
                        </form>

                    </div>
                </div>
                <!-- sidebar adv -->
                <div class="sidebar-widget">
                    <div class="thumbnail">
                        <a href="">
                            <img src="images/adv/6.png">
                            </img>
                        </a>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="thumbnail">
                        <a href="">
                            <img src="images/adv/7.png">
                            </img>
                        </a>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="thumbnail">
                        <a href="">
                            <img src="images/adv/8.png">
                            </img>
                        </a>
                    </div>
                </div>
            </div>
            <div class="clear">
            </div>
        </div>
    </div>
</div>
