    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                <h4>Thông tin liên hệ</h4>
                <form ng-submit="updateContact(data)" class="form-horizontal" method="post">
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            Tên phòng ban
                        </label>
                        <div class="col-md-10">
                            <input class="form-control" ng-model="data.name" type="text" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            Địa chỉ
                        </label>
                        <div class="col-md-10">
                            <input class="form-control" ng-model="data.location" type="text" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            Số điện thoại
                        </label>
                        <div class="col-md-10">
                            <input class="form-control" ng-model="data.phone" type="text" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            Email
                        </label>
                        <div class="col-md-10">
                            <input class="form-control" ng-model="data.email" type="text" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            Fax
                        </label>
                        <div class="col-md-10">
                            <input class="form-control" ng-model="data.fax" type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            Website
                        </label>
                        <div class="col-md-10">
                            <input class="form-control" ng-model="data.web" type="text" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            Mô tả
                        </label>
                        <div class="col-md-10">
                            <textarea  class="form-control" ng-model="data.desc"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            Trạng thái
                        </label>
                        <div class="col-md-10">
                            <div class="checkbox checkbox-custom">
                                <input type="checkbox" id="checkbox" name="checkbox" ng-model="data.status" ng-checked="data.status == 1">
                                <label for="checkbox">
                                    Hoạt động
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            Định vị
                        </label>
                        <div class="col-md-10">
                            <!-- <input class="form-control" ng-model="data.map.lat" type="text" required=""><br/>
                            <input class="form-control" ng-model="data.map.lng" type="text" required=""> -->
                            <div class="input-group">
                                <span class="input-group-addon">LAT</span>
                                <input type="text" class="form-control" ng-model="data.map.lat">
                                <span class="input-group-addon">LNG</span>
                                <input type="text" class="form-control" ng-model="data.map.lng">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            Nội dung liên hệ
                        </label>
                        <div class="col-lg-10">
                            <textarea name="" id="" cols="30" rows="10" ui-tinymce="tinymceOptions" ng-model="data.content"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-success">Cập nhật nội dung</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>