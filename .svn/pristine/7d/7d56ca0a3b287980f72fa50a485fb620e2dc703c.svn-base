<div class="page-container">
	<div class="fix-width">
		<div class="page-have-sidebar">
			<div class="page-wrap">
				<div class="breadcumb">
					<a href="/" class="home"><i class="fa fa-home"></i> Trang chủ</a>
					<span class="sep"></span>
					<a href="video">Video</a>
					<div class="clear"></div>
				</div>	
				<% for(var c in cvideos){ %>								
				<div class="media-area">
					<h3 class="title video-icon"><%= cvideos[c].name %></h3>
					<div class="list-media">
						<% for(var v in videos){ if(videos[v].type._id == cvideos[c]._id){ %>
						<div class="three-col">
							<div class="item video">
								<div class="thumbnail">
									<a href="<%= videos[v].url %>">
										<img src="<%= videos[v].img %>">
										<span class="mark"></span>
									</a>
								</div>
								<div class="content">
									<a href="<%= videos[v].url %>">
									<%= videos[v].name %>
									</a>
								</div>
							</div>
						</div>
						<% } } %>
						<div class="clear"></div>
					</div>
				</div>
				<% } %>
				<div class="adv-are">
					<div class="row-adv">
						<div class="two-col thumbnail">
							<a href="">
								<img src="images/adv/3.png">
							</a>
						</div>
						<div class="two-col thumbnail">
							<a href="">
								<img src="images/adv/4.png">
							</a>
						</div>
						<div class="clear"></div>
						<div class="full-adv thumbnail">
							<a href="">
								<img src="images/adv/5.png">
							</a>
						</div>
					</div>
				</div>
				<!-- end adv -->		
			</div>
			<div class="sidebar">
				<div class="sidebar-widget menu-widget">
	<div class="widgettitle">
		<h3>Danh mục video/h3>
	</div>
	<div class="widgetcontent">
		<ul>
			<% for(var c in cvideos){ %>
            <li>
                <a href="<%= cvideos[c].url %>">
                    <%= cvideos[c].name %>
                </a>
            </li>
            <% } %>
		</ul>
	</div>
</div>
