        </div>
        <div class="col-lg-12">
        	<div class="col-lg-6">
        		<div class="card-box">
        			<div class="form-group" ng-repeat="type in types">
	                    <div class="checkbox checkbox-custom">
	                        <input type="checkbox" id="checkbox{{$index}}" value="{{type.type.url}}" ng-checked="isMenu(type.type.url, menus)" ng-click="addMenu(type.type)">
	                        <label for="checkbox{{$index}}">
	                            {{type.type.name}}
	                        </label>
	                    </div>
	                </div>
        		</div>
        	</div>
        	<div class="col-lg-6">
        		<div class="card-box">
					<div class="table-responsive">
						<table class="table table-hover">
							<thead>
								<tr>
									<th>#</th>
									<th>Danh mục cha</th>
									<th>Vị trí</th>
								</tr>
							</thead>
							<tbody>
								<tr ng-repeat="item in menus">
									<td>{{$index+1}}</td>
									<td>{{item.name}}</td>
									<td>
										<button class="btn btn-success btn-sm" ng-if="$index != 0" ng-click="sort(item._id)"><i class="zmdi zmdi-eject"></i></button>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
        	</div>
        	
