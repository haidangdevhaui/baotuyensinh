<div ng-controller="mediaCtrl">
    <!-- <div class="row">
		<h4 class="page-title">Danh sách dự án</h4>
	</div>
	 -->
    <div class="row">
        <div class="col-sm-12">
            <div class="btn-group pull-right m-t-15">
                <button class="btn btn-info" type="button" ui-sref="videos-create">
                    Đăng Video
                    <span class="m-l-5">
                        <i class="fa fa-edit">
                        </i>
                    </span>
                </button>

                <button class="btn btn-success" type="button" ui-sref="videos-category">
                    Danh mục video
                    <span class="m-l-5">
                        <i class="fa fa-edit">
                        </i>
                    </span>
                </button>
                <!-- <button aria-expanded="false" class="btn btn-custom dropdown-toggle waves-effect waves-light" data-toggle="dropdown" type="button">
                    Cài đặt
                    <span class="m-l-5">
                        <i class="fa fa-cog">
                        </i>
                    </span>
                </button> -->
                <ul class="dropdown-menu" role="menu">
                    <li>
                        <a href="#">
                            Action
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            Another action
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            Something else here
                        </a>
                    </li>
                    <li class="divider">
                    </li>
                    <li>
                        <a href="#">
                            Separated link
                        </a>
                    </li>
                </ul>
            </div>
            <h4 class="page-title">
               	Danh sách video
            </h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card-box table-responsive">
                <div class="col-lg-4">
                    <input type="text" class="form-control" placeholder="Tìm kiếm" ng-model="search">
                </div>
                <div class="col-lg-2">
                    <select ng-model="record" ng-change="Video.getList(1, record)" class="form-control">
                        <option value="5">5</option>
                        <option value="10">10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                    </select>
                </div>
                <div class="col-lg-2">
                    <select ng-model="typeFilter" ng-change="Video.getList(typeFilter, 1, record)" class="form-control">
                        <option value="">Hiện thị tất cả</option>
                        <option ng-repeat="t in datas" value="{{t._id}}">{{t.name}}</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <div class="dropdown pull-right">
                    <a aria-expanded="false" class="dropdown-toggle card-drop" data-toggle="dropdown" href="#">
                        <i class="zmdi zmdi-more-vert">
                        </i>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">
                                Action
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Another action
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Something else here
                            </a>
                        </li>
                        <li class="divider">
                        </li>
                        <li>
                            <a href="#">
                                Separated link
                            </a>
                        </li>
                    </ul>
                </div>
                
                <table class="table table-striped table-bordered news-table">
                    <thead>
                        <tr class="tr-title">
                            <th>Ảnh</th>
                            <th><i class="zmdi zmdi-unfold-more" ng-click="Video.sort('name')"></i> Tên tin</th>
                            <th>Loại tin</th>
                            <th>Mô tả</th>
                            <th>Người đăng tin</th>
                            <th><i class="zmdi zmdi-unfold-more" ng-click="Video.sort('crt')"></i> Thời gian</th>
                            <th><i class="zmdi zmdi-unfold-more" ng-click="Video.sort('views')"></i> Lượt xem</th>
                            <th>Quản lý</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-if="data.length == 0">
                            <td colspan="8"><center>Không có dữ liệu</center></td>
                        </tr>
                        <tr ng-repeat="item in data | filter: search | orderBy:sortKey:reverse"  id="data-{{item._id}}">
                            <td>
                                <img src="{{item.img}}" alt="" style="height: 130px;">
                            </td>
                            <td>
                                {{item.name}}
                            </td>
                            <td>
                                {{item.type.name}}
                            </td>
                            <td>
                               {{item.desc.substr(0, 70)}}
                               <span ng-if="item.desc.length > 70">...</span>
                            </td>
                            <td>
                                {{item.user.fullname}}
                            </td>
                            <td>
                                {{item.crt}}
                            </td>
                            <td>
                                {{item.views}}
                            </td>
                            <td style="min-width:140px">
                                <div class="btn-group btn-group-xs" role="group" aria-label="...">
                                    <button type="button" class="btn btn-success" ui-sref="Video-detail({id: item._id})">chi tiết</button>
                                    <button type="button" class="btn btn-warning" ng-click="edit(item._id)">sửa</button>
                                    <button type="button" class="btn btn-danger" ng-click="delete(item._id)">xóa</button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- end col -->
        <div class="col-lg-12">
            <center>
            <div class="card-box table-responsive">
                <nav>
                  <ul class="pagination" ng-repeat="p in totalPage">
                    <li ng-if="p == 1" ng-click="Video.getList(typeFilter, currentPage-1, record)">
                      <a href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                      </a>
                    </li>
                    <li ng-class="{'disabled active':currentPage == p}">
                        <a ng-if="currentPage == p">{{p}}</a>
                        <a ng-if="currentPage != p" ng-click="Video.getList(typeFilter, p, record)">{{p}}</a>
                    </li>
                    <li ng-if="p == totalPage.length" ng-click="Video.getList(typeFilter, currentPage+1, record)">
                      <a href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                      </a>
                    </li>
                  </ul>
                </nav>
            </div>
            </center>
        </div>
    </div>
    <!-- end row -->
</div>