<!-- begin page content -->
<div class="page-container">
    <div class="fix-width">
        <div class="page-have-sidebar">
            <div class="page-wrap">
                <div class="breadcumb">
                    <a class="home" href="/">
                        <i class="fa fa-home">
                        </i>
                        Trang chủ
                    </a>
                    <span class="sep">
                    </span>
                    <a href="#">
                        <%= type.name %>
                    </a>
                    <div class="clear">
                    </div>
                </div>
                <div class="list-blog-page">
            		<% for(var i in categories){ if(categories[i].type._id == type._id){ %>
                    <h3 class="title book-icon">
                        <%= categories[i].name %>
                    </h3>
                    <div class="item">
                    	<% var a = 0; for(var p in posts){ if(posts[p].category._id == categories[i]._id){ a ++; %>
                        <div class="thumbnail">
                            <a href="<%= posts[p].url %>">
                                <img src="<%= posts[p].img %>">
                                    <span class="mark">
                                    </span>
                                </img>
                            </a>
                        </div>
                        <div class="content">
                            <a class="title" href="<%= posts[p].url %>">
                                <%= posts[p].name %>
                            </a>
                            <p class="date">
                                (<%= posts[p].crt %> - <%= posts[p].view %> lượt xem)
                            </p>
                            <p>
                                <%= posts[p].desc %>
                                <a class="readmore" href="<%= posts[p].url %>">
                                    Chi tiết
                                    <i class="fa fa-angle-double-right">
                                    </i>
                                </a>
                            </p>
                        </div>
                        <% if(a == 1){ break;} %>
                        <% } } %>
                        <div class="clear">
                        </div>
                    </div>
                    <div class="more_blogs_page">
                        <ul>
                        	<% var a = 0; for(var p in posts){ if(posts[p].category._id == categories[i]._id){ a ++; if(a > 1){ %>
                            <li>
                                <a href="<%= posts[p].url %>">
                                    <%= posts[p].name %>
                                    <span>
                                        (<%= posts[p].views %> lượt xem)
                                    </span>
                                </a>
                            </li>
                            <% } } } %>
                        </ul>
                    </div>
                    <div class="line">
                    </div>
                    <% } } %>
                </div>
                <!-- end list blog -->
                <div class="adv-are">
                    <div class="row-adv">
                        <div class="two-col thumbnail">
                            <a href="">
                                <img src="images/adv/3.png">
                                </img>
                            </a>
                        </div>
                        <div class="two-col thumbnail">
                            <a href="">
                                <img src="images/adv/4.png">
                                </img>
                            </a>
                        </div>
                        <div class="clear">
                        </div>
                        <div class="full-adv thumbnail">
                            <a href="">
                                <img src="images/adv/5.png">
                                </img>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- end adv -->
            </div>
            <div class="sidebar">
                <div class="sidebar-widget menu-widget">
                    <div class="widgettitle">
                        <h3>
                            Danh mục <%= type.name %>
                        </h3>
                    </div>
                    <div class="widgetcontent">
                        <ul>
                            <% for(var c in categories){ if(categories[c].type._id == type._id){ %>
                            <li>
                                <a href="<%= categories[c].url %>">
                                    <%= categories[c].name %>
                                </a>
                            </li>
                            <% } } %>
                        </ul>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="widgettitle">
                        <h3>
                            Tin tức nổi bật
                        </h3>
                    </div>
                    <div class="widgetcontent">
                        <div class="list-blog-sidebar">
                            <% var a = 0; for(var i in hots){ if(hots[i].type._id == type._id){ a ++;%>
                            <div class="item">
                                <div class="thumbnail">
                                    <a href="<%= hots[i].url %>">
                                        <img src="<%= hots[i].img %>">
                                        </img>
                                    </a>
                                </div>
                                <div class="content">
                                    <a href="<%= hots[i].url %>">
                                        <%= hots[i].name %>
                                    </a>
                                </div>
                                <div class="clear">
                                </div>
                            </div>
                            <% if(a == 3){break; }%>
                            <% } } %>
                        </div>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="widgettitle">
                        <h3>
                            Thư viện hình ảnh
                        </h3>
                    </div>
                    <div class="widgetcontent">
                        <!-- Place somewhere in the <body> of your page -->
                        <div class="flexslider" id="slider">
                            <ul class="slides">
                                <li>
                                    <img src="images/blog/slide1.png"/>
                                </li>
                                <li>
                                    <img src="images/blog/slide1.png"/>
                                </li>
                                <li>
                                    <img src="images/blog/slide1.png"/>
                                </li>
                                <li>
                                    <img src="images/blog/slide1.png"/>
                                </li>
                                <!-- items mirrored twice, total of 12 -->
                            </ul>
                        </div>
                        <div class="flexslider controle-nav" id="carousel">
                            <ul class="slides">
                                <li>
                                    <div class="thumbnail">
                                        <img src="images/blog/slide1.png"/>
                                    </div>
                                </li>
                                <li>
                                    <div class="thumbnail">
                                        <img src="images/blog/slide1.png"/>
                                    </div>
                                </li>
                                <li>
                                    <div class="thumbnail">
                                        <img src="images/blog/slide1.png"/>
                                    </div>
                                </li>
                                <li>
                                    <div class="thumbnail">
                                        <img src="images/blog/slide1.png"/>
                                    </div>
                                </li>
                                <!-- items mirrored twice, total of 12 -->
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="widgettitle">
                        <h3>
                            Thư viện video
                        </h3>
                    </div>
                    <div class="widgetcontent">
                        <div class="videoslide">
                            <div class="video-iframe">
                                <iframe>
                                </iframe>
                            </div>
                            <div class="video-list">
                                <ul>
                                    <li class="current">
                                        <a href="bM7SZ5SBzyY">
                                            <i class="fa fa-video-camera">
                                            </i>
                                            Phóng sự báo cáo kết quả đại hội IX Báo Tuyển sinh
                                        </a>
                                    </li>
                                    <li>
                                        <a href="FjNdYp2gXRY">
                                            <i class="fa fa-video-camera">
                                            </i>
                                            Hội sinh viên Việt Nam vươn tầm ra thế giới, gắn chặt tình đoàn kết
                                        </a>
                                    </li>
                                    <li>
                                        <a href="jK2aIUmmdP4">
                                            <i class="fa fa-video-camera">
                                            </i>
                                            Tổng kết nhiệm vụ - kết quả Quý III năm 2014 trong hoạt động Hội sinh viên Việt Nam
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="widgettitle">
                        <h3>
                            Thăm dò ý kiến
                        </h3>
                    </div>
                    <div class="widgetcontent rate-form">
                        <p>
                            <strong>
                                Bạn thấy website trình bày có hợp lý và đẹp mắt không?
                            </strong>
                        </p>
                        <form action="" method="get">
                            <label>
                                <input name="rate" type="radio" value="5">
                                    Rất tuyệt vời
                                </input>
                            </label>
                            <label>
                                <input name="rate" type="radio" value="4">
                                    Chuyên nghiệp
                                </input>
                            </label>
                            <label>
                                <input name="rate" type="radio" value="3">
                                    Bình thường
                                </input>
                            </label>
                            <label>
                                <input name="rate" type="radio" value="2">
                                    Kém
                                </input>
                            </label>
                            <input class="submit-btn submit-form" type="submit" value="Bình chọn">
                                <a class="submit-btn result-form" href="">
                                    Xem kết quả
                                </a>
                            </input>
                        </form>
                    </div>
                </div>
                <!-- sidebar adv -->
                <div class="sidebar-widget">
                    <div class="thumbnail">
                        <a href="">
                            <img src="images/adv/6.png">
                            </img>
                        </a>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="thumbnail">
                        <a href="">
                            <img src="images/adv/7.png">
                            </img>
                        </a>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="thumbnail">
                        <a href="">
                            <img src="images/adv/8.png">
                            </img>
                        </a>
                    </div>
                </div>
            </div>
            <div class="clear">
            </div>
        </div>
    </div>
</div>