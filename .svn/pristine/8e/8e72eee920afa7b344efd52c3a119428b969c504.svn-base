<!-- begin page content -->
<div class="page-container">
    <div class="fix-width">
        <div class="page-have-sidebar">
            <div class="page-wrap">
                <div class="breadcumb">
                    <a class="home" href="/">
                        <i class="fa fa-home">
                        </i>
                        Trang chủ
                    </a>
                    <span class="sep">
                    </span>
                    <a href="#">
                        <%= data.type.name %>
                    </a>
                    <div class="clear">
                    </div>
                </div>
                <div class="list-blog-page">
            		<% for(var i in data.categories){ if(data.categories[i].type._id == data.type._id){ %>
                    <h3 class="title book-icon">
                        <%= data.categories[i].name %>
                    </h3>
                    <div class="item">
                    	<% for(var p in data.posts){ if(data.posts[p].category._id == data.categories[i]._id){ %>
                        <div class="thumbnail">
                            <a href="<%= data.posts[p].url %>">
                                <img src="<%= data.posts[p].img %>">
                                    <span class="mark">
                                    </span>
                                </img>
                            </a>
                        </div>
                        <div class="content">
                            <a class="title" href="<%= data.posts[p].url %>">
                                <%= data.posts[p].name %>
                            </a>
                            <p class="date">
                                (<%= data.returnDate(data.posts[p].crt) %> - <%= data.posts[p].view %> lượt xem)
                            </p>
                            <p>
                                <%= data.posts[p].desc %>
                                <a class="readmore" href="<%= data.posts[p].url %>">
                                    Chi tiết
                                    <i class="fa fa-angle-double-right">
                                    </i>
                                </a>
                            </p>
                        </div>
                        <% break;} } %>
                        <div class="clear">
                        </div>
                    </div>
                    <div class="more_blogs_page">
                        <ul>
                        	<% var a = 0; for(var p in data.posts){ if(data.posts[p].category._id == data.categories[i]._id){ a ++; if(a > 1){ %>
                            <li>
                                <a href="<%= data.posts[p].url %>">
                                    <%= data.posts[p].name %>
                                    <span>
                                        (<%= data.posts[p].views %> lượt xem)
                                    </span>
                                </a>
                            </li>
                            <% } } } %>
                        </ul>
                    </div>
                    <div class="line">
                    </div>
                    <% } } %>
                </div>
                <!-- end list blog -->
                <div class="adv-are">
                    <div class="row-adv">
                        <div class="two-col thumbnail">
                            <a href="">
                                <img src="images/adv/3.png">
                                </img>
                            </a>
                        </div>
                        <div class="two-col thumbnail">
                            <a href="">
                                <img src="images/adv/4.png">
                                </img>
                            </a>
                        </div>
                        <div class="clear">
                        </div>
                        <div class="full-adv thumbnail">
                            <a href="">
                                <img src="images/adv/5.png">
                                </img>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- end adv -->
            </div>
            <div class="sidebar">
                <div class="sidebar-widget menu-widget">
                    <div class="widgettitle">
                        <h3>
                            Danh mục <%= data.type.name %>
                        </h3>
                    </div>
                    <div class="widgetcontent">
                        <ul>
                            <% for(var c in data.categories){ if(data.categories[c].type._id == data.type._id){ %>
                            <li>
                                <a href="<%= data.categories[c].url %>">
                                    <%= data.categories[c].name %>
                                </a>
                            </li>
                            <% } } %>
                        </ul>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="widgettitle">
                        <h3>
                            Tin tức nổi bật
                        </h3>
                    </div>
                    <div class="widgetcontent">
                        <div class="list-blog-sidebar">
                            <% var a = 0; for(var i in data.posts){ if(data.posts[i].type._id == data.type._id){ a ++;%>
                            <div class="item">
                                <div class="thumbnail">
                                    <a href="<%= data.posts[i].url %>">
                                        <img src="<%= data.posts[i].img %>">
                                        </img>
                                    </a>
                                </div>
                                <div class="content">
                                    <a href="<%= data.posts[i].url %>">
                                        <%= data.posts[i].name %>
                                    </a>
                                </div>
                                <div class="clear">
                                </div>
                            </div>
                            <% if(a == 3){break; }%>
                            <% } } %>
                        </div>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="widgettitle">
                        <h3>
                            Thư viện hình ảnh
                        </h3>
                    </div>
                    <div class="widgetcontent">
                        <!-- Place somewhere in the <body> of your page -->
                        <div class="flexslider" id="slider">
                            <ul class="slides">
                                <li>
                                    <img src="images/blog/slide1.png"/>
                                </li>
                                <li>
                                    <img src="images/blog/slide1.png"/>
                                </li>
                                <li>
                                    <img src="images/blog/slide1.png"/>
                                </li>
                                <li>
                                    <img src="images/blog/slide1.png"/>
                                </li>
                                <!-- items mirrored twice, total of 12 -->
                            </ul>
                        </div>
                        <div class="flexslider controle-nav" id="carousel">
                            <ul class="slides">
                                <li>
                                    <div class="thumbnail">
                                        <img src="images/blog/slide1.png"/>
                                    </div>
                                </li>
                                <li>
                                    <div class="thumbnail">
                                        <img src="images/blog/slide1.png"/>
                                    </div>
                                </li>
                                <li>
                                    <div class="thumbnail">
                                        <img src="images/blog/slide1.png"/>
                                    </div>
                                </li>
                                <li>
                                    <div class="thumbnail">
                                        <img src="images/blog/slide1.png"/>
                                    </div>
                                </li>
                                <!-- items mirrored twice, total of 12 -->
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="widgettitle">
                        <h3>
                            Thư viện video
                        </h3>
                    </div>
                    <div class="widgetcontent">
                        <div class="videoslide">
                            <div class="video-iframe">
                                <iframe>
                                </iframe>
                            </div>
                            <div class="video-list">
                                <ul>
                                    <li class="current">
                                        <a href="bM7SZ5SBzyY">
                                            <i class="fa fa-video-camera">
                                            </i>
                                            Phóng sự báo cáo kết quả đại hội IX Báo Tuyển sinh
                                        </a>
                                    </li>
                                    <li>
                                        <a href="FjNdYp2gXRY">
                                            <i class="fa fa-video-camera">
                                            </i>
                                            Hội sinh viên Việt Nam vươn tầm ra thế giới, gắn chặt tình đoàn kết
                                        </a>
                                    </li>
                                    <li>
                                        <a href="jK2aIUmmdP4">
                                            <i class="fa fa-video-camera">
                                            </i>
                                            Tổng kết nhiệm vụ - kết quả Quý III năm 2014 trong hoạt động Hội sinh viên Việt Nam
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="widgettitle">
                        <h3>
                            Thăm dò ý kiến
                        </h3>
                    </div>
                    <div class="widgetcontent rate-form">
                        <p>
                            <strong>
                                Bạn thấy website trình bày có hợp lý và đẹp mắt không?
                            </strong>
                        </p>
                        <form method="post" action="" class="form-vote">
                            <label>
                                <input type="radio" value="4" name="rate">
                                    Rất tuyệt vời
                                
                            </label>
                            <label>
                                <input type="radio" value="3" name="rate">
                                    Chuyên nghiệp
                                
                            </label>
                            <label>
                                <input type="radio" value="2" name="rate">
                                    Bình thường
                                
                            </label>
                            <label>
                                <input type="radio" value="1" name="rate">
                                    Kém
                                
                            </label>
                            <input type="submit" value="Bình chọn" class="submit-btn submit-form">
                            <a id="xemkq" class="submit-btn result-form">
                                Xem kết quả
                            </a>
                        </form>

                    </div>
                </div>
                <!-- sidebar adv -->
                <div class="sidebar-widget">
                    <div class="thumbnail">
                        <a href="">
                            <img src="images/adv/6.png">
                            </img>
                        </a>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="thumbnail">
                        <a href="">
                            <img src="images/adv/7.png">
                            </img>
                        </a>
                    </div>
                </div>
                <div class="sidebar-widget">
                    <div class="thumbnail">
                        <a href="">
                            <img src="images/adv/8.png">
                            </img>
                        </a>
                    </div>
                </div>
            </div>
            <div class="clear">
            </div>
        </div>
    </div>
</div>