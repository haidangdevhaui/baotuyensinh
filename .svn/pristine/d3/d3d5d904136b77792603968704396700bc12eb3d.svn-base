<div class="page-container homepage">
    <div class="fix-width">
        <div class="feature-area">
            <div class="feature-blogs">
                <% if(data.posts[0]){ %>
                <div class="feature-item">
                    <div class="thumbnail">
                        <a href="<%= data.posts[0].url %>">
                            <img src="<%= data.posts[0].img %>">
                        </a>
                    </div>
                    <a href="<%= data.posts[0].url %>" class="title"><%= data.posts[0].name %></p>
                </div>
                <% } %>
                <div class="blogs-slide">
                    <ul data-margin="12" data-width="100">
                        <% for(var p in data.posts){ %>
                        <li>
                            <div class="item">
                                <div class="thumbnail">
                                    <a href="<%= data.posts[p].url %>">
                                        <img src="<%= data.posts[p].img %>">
                                    </a>
                                </div>
                                <a href="<%= data.posts[p].url %>" class="title"><%= data.posts[p].name %></a>
                            </div>
                        </li>
                        <% } %>
                    </ul>
                </div>
            </div>
            <div class="feature-news og-tabs-area">
                <ul class="tab-menu">
                    <li class="current"><a href="#tab1">TIN MỚI NHẤT</a></li>
                    <li><a href="#tab2">TIN NÓNG NHẤT</a></li>
                </ul>
                <div class="tab-content">
                    <div id="tab1" class="item current">
                        <ul>
                            <% for(var i in data.posts){ %>
                            <li><a href="<%= data.posts[i].url %>"><%= data.posts[i].name %></a></li>
                            <% } %>
                        </ul>
                    </div>
                    <div id="tab2" class="item">
                        <ul>
                            <% for(var i in data.posts){ %>
                            <li><a href="<%= data.posts[i].url %>"><%= data.posts[i].name %></a></li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="home-adv-area1 thumbnail">
                <a href="#">
                    <img src="images/home/adv/1.png">
                </a>
                <a href="#">
                    <img src="images/home/adv/2.png">
                </a>
                <a href="#">
                    <img src="images/home/adv/3.png">
                </a>
            </div>
            <div class="clear"></div>
        </div>
        <div class="all-blogs">
            <div class="left-side">
                <div class="list-blogs-home">
                    <% var a = 0; for(var i in data.posts){ a ++;%>
                    <div class="item">
                        <a href="<%= data.posts[i].url %>" class="title"><%= data.posts[i].name %></a>
                        <div class="thumbnail">
                            <a href="">
                                <img src="<%= data.posts[i].img %>">
                            </a>
                        </div>
                        <div class="content">
                            <p><%= data.posts[i].desc.substr(0, 120) %>
                            <% if(data.posts[i].desc.length > 120){ %>...<% } %>
                            </p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <% if(a == 15){ break;}%>
                    <% } %>
                </div>
                <div class="cat_blog_area">
                    <div class="title">
                        <a href="/video"><h3>Video</h3></a>
                        <div class="clear"></div>
                    </div>
                    <div class="list-blogs-home">
                        <% for(var m in data.medias){ if(data.medias[m].media == 'video'){ %>
                        <div class="item feature video">
                            <div class="thumbnail">
                                <div id="player"></div>
                                <script>
                                  var tag = document.createElement('script');

                                  tag.src = "https://www.youtube.com/iframe_api";
                                  var firstScriptTag = document.getElementsByTagName('script')[0];
                                  firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
                                  var player;
                                  function onYouTubeIframeAPIReady() {
                                    player = new YT.Player('player', {
                                      height: '190',
                                      width: '640',
                                      videoId: '<%= data.medias[m].video.id %>',
                                      events: {
                                        // 'onReady': onPlayerReady,
                                        'onStateChange': onPlayerStateChange
                                      }
                                    });
                                  }
                                  function onPlayerReady(event) {
                                    event.target.playVideo();
                                  }
                                  var done = false;
                                  function onPlayerStateChange(event) {
                                    if (event.data == YT.PlayerState.PLAYING && !done) {
                                      setTimeout(stopVideo, 6000);
                                      done = true;
                                    }
                                  }
                                  function stopVideo() {
                                    player.stopVideo();
                                  }
                                </script>
                            </div>
                            <div class="content">
                                <a href="<%= data.medias[m].url %>" class="title"><%= data.medias[m].name %></a>
                                <p><%= data.medias[m].desc %></p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <% break; %>
                        <% } } %>
                    </div>
                    <div class="blogs-slide">
                        <ul data-width="100" data-margin="20">
                            <% var a = 0; for(var m in data.medias){ if(m > 0 && data.medias[m].media == 'video' ){ a ++;%>
                            <li>
                                <div class="item">
                                    <div class="thumbnail">
                                        <a href="/<%= data.medias[m].url %>">
                                            <img src="<%= data.medias[m].img %>">
                                        </a>
                                    </div>
                                    <a href="<%= data.medias[m].url %>" class="title"><%= data.medias[m].name.substr(0, 30) %>...</a>
                                </div>
                            </li>
                            <% if(a == 5){break; } %>
                            <% } } %>
                        </ul>
                    </div>
                </div>
                <div class="cat_blog_area">
                    <div class="title">
                        <a href="/hinh-anh"><h3>Hình ảnh</h3></a>                     
                        <div class="clear"></div>
                    </div>
                    <div class="list-blogs-home">
                        <% for(var m in data.medias){ if(data.medias[m].media == 'image'){ %>
                        <div class="item feature">
                            <div class="thumbnail">
                                <a href="/<%= data.medias[m].url %>">
                                    <img src="<%= data.medias[m].img %>">
                                    <span class="mark"></span>
                                </a>
                            </div>
                            <div class="content">
                                <a href="/<%= data.medias[m].url %>" class="title"><%= data.medias[m].name %></a>
                                <p>Ngày đăng: <%= data.returnDate(data.medias[m].crt) %> - Lượt xem: <%= data.medias[m].views %></p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <% break; } } %>
                    </div>
                    <div class="blogs-slide">
                        <ul data-width="100" data-margin="20">
                            <% var a = 0; for(var m in data.medias){ if(m > 0 && data.medias[m].media == 'image' ){ a ++;%>
                            <li>
                                <div class="item">
                                    <div class="thumbnail">
                                        <a href="<%= data.medias[m].url %>">
                                            <img src="<%= data.medias[m].img %>">
                                        </a>
                                    </div>
                                    <a href="<%= data.medias[m].url %>" class="title"><%= data.medias[m].name.substr(0, 30) %>...</a>
                                </div>
                            </li>
                            <% if(a == 5){break; } %>
                            <% } } %>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="right-side">
                <% for(var i in data.types){ %>
                <div class="cat_blog_area grid">
                    <div class="title">
                        <a href="<%= data.types[i].url %>"><h3><%= data.types[i].name %></h3></a>
                        <!-- show readmore khi o phone -->
                        <a class="readmore show-phone" href="<%= data.types[i].url %>">Xem thêm</a>
                        <div class="menu-slide">
                            <ul data-min="4" data-next="#cat_2_next" data-prev="#cat_2_prev" id="carosel-<%= i %>" class="mini-caros">
                                <% for(var c in data.categories){ if(data.categories[c].type._id == data.types[i]._id){ %>
                                <li><a href="<%= data.categories[c].url %>"><%= data.categories[c].name %></a></li>
                                <% } } %>
                            </ul>
                            <a href="#" id="cat_2_next" class="menu-control next"></a>
                            <a href="#" id="cat_2_prev" class="menu-control prev"></a>
                            <script type="text/javascript">
                                jQuery(document).ready(function () {
                                    jQuery('#carosel-<%= i %>').jcarousel({
                                        auto: 0
                                    });
                                });
                            </script>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="list-blogs-home">
                        <% for(var p in data.posts){ if(data.posts[p].type._id == data.types[i]._id){ %>
                        <div class="item">
                            <a href="<%= data.posts[p].url %>" class="title"><%= data.posts[p].name %></a>
                            <div class="thumbnail">
                                <a href="">
                                    <img src="<%= data.posts[p].img %>">
                                </a>
                            </div>
                            <div class="content">
                                <p><%= data.posts[p].desc.substr(0, 120) %>
                                <% if(data.posts[p].desc.length > 120){ %>...<% } %>
                                </p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <% break; } } %>
                    </div>
                    <div class="more_blogs">
                        <ul>
                            <% var a = 0; for(var p in data.posts){ if(data.posts[p].type._id == data.types[i]._id){ a ++;%>
                            <% if(a > 1){ %>
                            <li><a href="<%= data.posts[p].url %>"><%= data.posts[p].name %></a></li>
                            <% if(a == 2){break;}%>
                            <% } } }%>
                        </ul>
                    </div>
                    <div class="clear"></div>
                </div>
                <% } %>
                <div class="sidebar-widget">
                    <div class="widgettitle">
                        <h3>
                            Thăm dò ý kiến
                        </h3>
                    </div>
                    <div class="widgetcontent rate-form">
                        <p>
                            <strong>
                                Bạn thấy website trình bày có hợp lý và đẹp mắt không?
                            </strong>
                        </p>
                        <form method="post" action="" class="form-vote">
